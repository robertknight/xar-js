{
    "version": "1.5.3",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "build",
        "noEmitOnError": true,
        "strictNullChecks": true
    },
    "filesGlob": [
        "./**/*.ts",
        "./**/*.tsx",
        "!./node_modules/**/*",
        "!./typings/**/*"
    ],
    "files": [
        "./scripts/generate-cert-chain.ts",
        "./src/cli.ts",
        "./src/io.ts",
        "./src/lib.ts",
        "./src/util.ts",
        "./test/create.ts"
    ]
}
